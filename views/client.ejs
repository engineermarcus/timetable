    {
      "@context": "https://schema.org",
      "@type": "WebApplication",
      "name": "Timetable",
      "description": "Manage your timetable easily.",
      "url": "https://timestamp-nc0c.onrender.com/",
      "image": "https://timestamp-nc0c.onrender.com/thumbnail.jpg",
      "author": {
        "@type": "Person",
        "name": "Marcus Onyango"
      }
    }
    </script>
</body>
</html>
